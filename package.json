{
  "name": "next-tailwindcss-framer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "biome check && next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "biome check",
    "lint:ci": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "postinstall": "simple-git-hooks",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.68.0",
    "@types/react-dom": "^19.0.4",
    "clsx": "^2.1.1",
    "motion": "^12.5.0",
    "next": "^15.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@biomejs/biome": "1.9.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@storybook/addon-essentials": "^8.3.2",
    "@storybook/addon-interactions": "^8.3.2",
    "@storybook/addon-links": "^8.3.2",
    "@storybook/addon-onboarding": "^8.3.2",
    "@storybook/blocks": "^8.3.2",
    "@storybook/experimental-nextjs-vite": "^8.3.2",
    "@storybook/nextjs": "^8.3.2",
    "@storybook/react": "^8.3.2",
    "@storybook/test": "^8.3.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.18",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.10.0",
    "babel-loader": "^9.2.1",
    "lint-staged": "^15.2.10",
    "next-i18next": "^15.3.1",
    "next-router-mock": "^0.9.13",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.47",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.0.3",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.3.2",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vitest-axe": "^0.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --staged"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no-install commitlint --edit \"$1\""
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
